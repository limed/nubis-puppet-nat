# rp_filter (reverse path filter)

# Don't globally enforce
net.ipv4.conf.all.rp_filter = 0

# Enable by default
net.ipv4.conf.default.rp_filter = 1

# Enable on our outbound interface
net.ipv4.conf.<%= @nat_out_interface %>.rp_filter = 1

# Disable on our inbound interface
net.ipv4.conf.<%= @nat_in_interface %>.rp_filter = 0

# NAT stuff
# Allow IP forwarding
net.ipv4.ip_forward = 1

# Dont send icmp redirects ever
net.ipv4.conf.all.send_redirects = 0
